{
  "name": "google-sheets-mcp",
  "version": "1.0.0",
  "description": "MCP server for Google Sheets operations via sheets-db-api",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "tsx src/index.ts",
    "deploy": "gcloud functions deploy google-sheets-mcp --gen2 --runtime=nodejs20 --trigger-http --allow-unauthenticated --entry-point=mcpHandler --source=. --region=us-central1"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.0",
    "@google-cloud/functions-framework": "^3.4.0",
    "zod": "^3.23.0"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "tsx": "^4.7.0",
    "typescript": "^5.4.0"
  },
  "engines": {
    "node": ">=20"
  }
}
